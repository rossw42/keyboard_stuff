{
  "name": "ergogen-toolkit",
  "displayName": "Ergogen Toolkit",
  "description": "Simple VS Code extension to run Ergogen on YAML files and view DXF output files",
  "version": "4.0.0",
  "publisher": "ergogen-tools",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "dxf",
    "ergogen",
    "keyboard",
    "cad",
    "viewer"
  ],
  "activationEvents": [
    "workspaceContains:**/*.yaml",
    "workspaceContains:**/*.yml"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ergogen-toolkit.openViewer",
        "title": "Open DXF Viewer",
        "category": "Ergogen",
        "icon": "$(eye)"
      },
      {
        "command": "ergogen-toolkit.runErgogen",
        "title": "Run Ergogen",
        "category": "Ergogen",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "ergogen-toolkit.runErgogen",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "resourceExtname == .yaml || resourceExtname == .yml"
      },
      {
        "command": "ergogen-toolkit.openViewer",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "command": "ergogen-toolkit.runErgogen",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "command": "ergogen-toolkit.runErgogen",
          "group": "1_ergogen"
        },
        {
          "when": "resourceExtname == .dxf",
          "command": "ergogen-toolkit.openViewer",
          "group": "1_ergogen"
        }
      ]
    },
    "configuration": {
      "title": "Ergogen Toolkit",
      "properties": {
        "ergogen-toolkit.ergogenCommand": {
          "type": "string",
          "default": "ergogen",
          "description": "Command to run Ergogen (e.g., 'npx ergogen' or full path)"
        },
        "ergogen-toolkit.outputDirectory": {
          "type": "string",
          "default": "output",
          "description": "Default output directory name for Ergogen"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for JS'",
    "package": "npx vsce package",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ergogen-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ergogen-toolkit/issues"
  },
  "homepage": "https://github.com/yourusername/ergogen-toolkit#readme",
  "license": "MIT",
  "author": "",
  "type": "commonjs"
}
